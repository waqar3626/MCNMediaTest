@model MCNMedia_Dev.Models.GenericModel
@{
    Layout = "~/Views/Shared/_LayoutClientNew.cshtml";
}

<div class="form-group row">
    <div class="form-group pr-0 col-sm-2 sticky">
        <div class="card" >
            <div class="card-body">
                <div class=" form-group row">
                    <div class="col-sm-12 m-0 p-0 " style="background-color:white;text-align:center;">
                        @*<img src="@Model.Churches.ImageURl" class="auth-img-bg rounded-circle mb-2 " style="width:200px; height:200px;" alt="profile image" />*@
                        <img src="@Model.Churches.ImageURl"
                             class="auth-img-bg mb-2 mdi-responsive " style="max-height:100%;border-radius:3%; max-width:100%;" alt="profile image" />
                    </div>
                </div>
                <div class="col-sm-12 m-0 p-0" style="border-radius:3%;">
                    <div class="row pb-2" style="font-size-adjust: 0.48;">
                        <div class="col-xs-2 p-0">
                            <i class="mdi mdi-home church-details-icon"></i>
                        </div>
                        <div class="col-xs-10 pl-1">
                            @Model.Churches.ChurchName
                        </div>
                    </div>
                    <div class="row pb-2" style="font-size-adjust: 0.48;">
                        <div class="col-xs-2 p-0">
                            <i class="mdi mdi-phone church-details-icon"></i>
                        </div>
                        <div class="col-xs-10 pl-1">
                            @Model.Churches.Phone
                        </div>
                    </div>
                    <div class="row pb-2" style="font-size-adjust: 0.48;">
                        <div class="col-xs-2 p-0">
                            <i class="mdi mdi-email church-details-icon"></i>
                        </div>
                        <div class="col-xs-10 pl-1">
                            <a href="mailto: @Model.Churches.EmailAddress">
                                @Model.Churches.EmailAddress
                            </a>
                        </div>
                    </div>
                    <div class="row pb-2" style="font-size-adjust: 0.48;">
                        <div class="col-xs-2 p-0">
                            <i class="mdi mdi-web church-details-icon"></i>
                        </div>
                        <div class="col-xs-10 pl-1">
                            <a target="_blank" class="text-wrap text-break" href="@Model.Churches.Website">
                                @Model.Churches.Website
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group col-10">
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
    </div>
</div>
