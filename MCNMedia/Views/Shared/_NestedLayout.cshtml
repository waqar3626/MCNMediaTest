@model MCNMedia_Dev.Models.GenericModel
@{
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}


    <div class="form-group row">
        <div class="form-group col-sm-2 custom-card">
            <div class="card">
                <div class="card-body">

                    @*<label>Church Image</label>
                        <label>Church Name</label>
                        <label>Email</label>
                        <label>Phone</label>
                        <label>Address</label>
                        <label>Town</label>
                        <label>WebSite</label>*@
                    <div class=" form-group row">
                        <div class="col-sm-12 " style=" background-color:white;text-align:center;">


                            
                            
                                    @*<img src="@Model.Churches.ImageURl" class="auth-img-bg rounded-circle mb-2 " style="width:200px; height:200px;" alt="profile image" />*@
                                    <img src="@Model.Churches.ImageURl"
                                         class="auth-img-bg mb-2 mdi-responsive " style="max-height:100%;border-radius:3%; max-width:100%;" alt="profile image" />
                            

                           

                        </div>


                    </div>
                    <div class="col-sm-12 p-2" style="border-radius:3%;">

                        <div class="row pb-2" style="font-size-adjust: 0.48;" >
                            <div class="col-sm-2">
                                <i class="fa fa-home church-details-icon pl-2"></i>
                            </div>
                            <div class="col-sm-10 pl-2" >
                                @Model.Churches.ChurchName
                            </div>
                        </div>

                        <div class="row pb-2 " style="font-size-adjust: 0.48;">
                            <div class="col-sm-2">
                                <i class="fa fa-phone church-details-icon pl-2"></i>
                            </div>
                            <div class="col-sm-10 pl-2">
                                @Model.Churches.Phone
                            </div>
                        </div>
                        <div class="row pb-2" style="font-size-adjust: 0.48;">
                            <div class="col-sm-2">
                                <i class="fa fa-envelope church-details-icon pl-2"></i>
                            </div>
                            <div class="col-sm-10 pl-2">
                                <a href="mailto:test_Churches27_7">
                                    @Model.Churches.EmailAddress
                                </a>
                            </div>
                        </div>

                        <div class="row pb-2" style="font-size-adjust: 0.48;">
                            <div class="col-sm-2">
                                <i class="fa fa-globe church-details-icon  pl-2"></i>
                            </div>
                            <div class="col-sm-10 pl-2">
                                <a target="_blank" href="http://test_Churches27_7">
                                    @Model.Churches.Website
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group col-10">
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
            
        </div>
    </div>
