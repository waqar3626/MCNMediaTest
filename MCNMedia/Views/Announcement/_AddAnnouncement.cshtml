@model MCNMedia_Dev.Models.GenericModel
@{

}

@using (Html.BeginForm("AddAnnouncement", "Announcement", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col">
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Announcement.AnnouncementTitle" class="control-label">Announcement Title</label>
                    <input asp-for="Announcement.AnnouncementTitle" class="form-control" id="AddAnnouncementTitle" />
                    <span asp-validation-for="Announcement.AnnouncementTitle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="Announcement.AnnouncementText" class="control-label">Notice</label>

                        <textarea id="summernote-basic1" asp-for="Announcement.AnnouncementText"></textarea>

                        <span asp-validation-for="Announcement.AnnouncementText" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group">
                    <div class="float-right">
                        <a onclick="Addannouncement()" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="bottom" title="Update"><i class="fa fa-plus text-white">Add</i></a>
                        <a id="back" class="btn btn-secondary btn-sm text-white " data-dismiss="modal" aria-label="Close"><i class="fa fa-window-close-o text-white"></i> Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript">
    function Addannouncement() {


        var announcementTitle = document.getElementById('AddAnnouncementTitle').value;
        
        var announcementText = $("#summernote-basic1").summernote('code');

        var formData = new FormData();
        formData.append("announceTittle", announcementTitle);
        formData.append("announceText", announcementText);
       

        $.ajax({
            type: "POST",
            url: "/Announcement/AddAnnouncement/",

            data: formData,
            processData: false,  // tell jQuery not to process the data
            contentType: false,  // tell jQuery not to set contentType

            //data: { AddVidTabName: AddvidTabName, VidFile11: VidFile1 },


            success: function (result) {
                loadAnnouncement();
                $('#AddAnnouncementPopUp').modal('hide');
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
    </script>
}