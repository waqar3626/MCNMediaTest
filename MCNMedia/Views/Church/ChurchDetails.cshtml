@model MCNMedia_Dev.Models.Church
@{
    ViewData["Title"] = "ChurchDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
  
}

<div class="col-12">
<div class="col-md-12 col-xl-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Church Details</h4>
            <p class="card-description">Horizontal bootstrap tab</p>
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="Information-tab" data-toggle="tab" href="#Information-1" role="tab" aria-controls="Information-1" aria-selected="true"><i class="fa fa-info-circle text-info"></i> Information</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="Camera-tab" data-toggle="tab" href="#Camera-1" role="tab" aria-controls="Camera-1" aria-selected="false"><i class="fa fa-camera-retro text-success"></i> Add Camera</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="Slideshow-tab" data-toggle="tab" href="#Slideshow-1" role="tab" aria-controls="Slideshow-1" aria-selected="false"><i class="mdi mdi-folder-multiple-image text-info"></i> Add Slideshow</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="Video-tab" data-toggle="tab" href="#Video-1" role="tab" aria-controls="Video-1" aria-selected="false"><i class="fa fa-file-video-o text-danger"></i> Add Video</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="Picture-tab" data-toggle="tab" href="#Picture-1" role="tab" aria-controls="Picture-1" aria-selected="false"><i class="fa fa-picture-o text-success"></i> Add Picture</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="Notice-tab" data-toggle="tab" href="#Notice-1" role="tab" aria-controls="Notice-1" aria-selected="false"><i class="fa fa-sticky-note-o text-info"></i> Add Notice</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="Notice-tab" data-toggle="tab" href="#Notice-1" role="tab" aria-controls="Notice-1" aria-selected="false"><i class="fa fa-cogs text-info"></i> Set Up</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="Information-1" role="tabpanel" aria-labelledby="Information-tab">
                    <div class="media"> 
                        <div class="media-body">
                            @Html.Partial("~/Views/Church/_ChurchInfo.cshtml") 
