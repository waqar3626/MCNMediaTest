@model MCNMedia_Dev.Models.Schedule

@{
    ViewData["Title"] = "Schedule";
}


@{
    List<SelectListItem> SelectList = Lists.GetChurchListForDDL();
}

<form asp-action="AddSchedule">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-body">
            <h4 class="modal-title">Add New Schedule</h4>

            <div class="form-group row">
                <label asp-for="ChurchId" class="col-sm-3 col-form-label">Church</label>
                <div class="col-sm-9">
                    <span asp-validation-for="ChurchId" class="text-danger"></span>
                        @*<input asp-for="Churches.ClientTypeId" class="form-control" />*@
                        @Html.DropDownList("ChurchId", SelectList, new { @class = "form-control" })
                        <span asp-validation-for="ChurchId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="EventName" class="col-sm-3 col-form-label">Event Name</label>
                <div class="col-sm-9">
                    <span asp-validation-for="EventName" class="text-danger"></span>
                    <input type="text" asp-for="EventName" class="form-control" placeholder="Event Name" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="EventDate" class="col-sm-3 col-form-label">Event Date</label>
                <div class="col-sm-9">
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                    <div id="datepicker-popup" class="input-group date datepicker">
                        <input type="text" asp-for="EventDate" class="form-control" placeholder="Event Date" />
                        <span class="input-group-addon input-group-append border-left">
                            <span class="ti-calendar input-group-text"></span>
                        </span>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="EventDay" class="col-sm-3 col-form-label">Event Day</label>
                <div class="col-sm-9">
                    <span asp-validation-for="EventDay" class="text-danger"></span>
                    <input asp-for="EventDay" class="form-control" placeholder="Event Day" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="EventTime" class="col-sm-3 col-form-label">Event Time</label>
                <div class="col-sm-9">
                    <span asp-validation-for="EventTime" class="text-danger"></span>
                    <div class="input-group date" id="timepicker-example" data-target-input="nearest">
                        <div class="input-group" data-target="#timepicker-example" data-toggle="datetimepicker">
                            <input type="text" asp-for="EventTime" class="form-control datetimepicker-input" data-target="#timepicker-example" placeholder="Event Time" />
                            <div class="input-group-addon input-group-append"><i class="ti-time input-group-text"></i></div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="float-right">
                <button type="submit" value="Create" class="btn btn-primary "><i class="fa fa-plus"></i> Add Event</button>
                <a id="back" class="btn btn-secondary btn-md " href="../Schedule/ListSchedule"><i class="fa fa-chevron-left"></i> Back</a>
            </div>
        </div>
    </div>


</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
