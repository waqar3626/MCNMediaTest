@model MCNMedia_Dev.Models.GenericModel
@using Microsoft.AspNetCore.Http;
@{ ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutClientNew.cshtml"; }

<link href="https://vjs.zencdn.net/7.2.3/video-js.css" rel="stylesheet">
<script src="https://vjs.zencdn.net/ie8/ie8-version/videojs-ie8.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/videojs-contrib-hls/5.14.1/videojs-contrib-hls.js"></script>
<script src="https://vjs.zencdn.net/7.2.3/video.js"></script>
<style>
    .toggle.ios, .toggle-on.ios, .toggle-off.ios {
        border-radius: 20rem;
    }

        .toggle.ios .toggle-handle {
            border-radius: 20rem;
        }
</style>
<style type="text/css">
    .vjs-big-play-button {
        left: 40% !important;
        top: 40% !important;
    }
</style>
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="row">
            <div class="col-12 col-xl-7 mb-4 mb-xl-0">
                <h4 class="font-weight-bold">@Model.Churches.ChurchName </h4>
                <h4 class="font-weight-normal mb-0">@Model.Churches.Town</h4>
            </div>
            <div class="col-12 col-xl-5">
                <div class="d-flex align-items-center justify-content-between flex-wrap">
                    <div class="border-right pr-4 mb-3 mb-xl-0 text-center">
                        <p class="text-muted">Today's Event</p>
                        <h4 class="mb-0 font-weight-bold">@Model.DashBoardClients.TodaysSchedules</h4>
                    </div>
                    <div class="border-right pr-4 mb-3 mb-xl-0 text-center">
                        <p class="text-muted">With Recording</p>
                        <h4 class="mb-0 font-weight-bold">@Model.DashBoardClients.TodaysRecordings</h4>
                    </div>
                    <div class="pr-4 mb-3 mb-xl-0 text-center">
                        <p class="text-muted">Without Recording</p>
                        <h4 class="mb-0 font-weight-bold">@Model.DashBoardClients.TodaysEventsWithOutRecordings</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-4">
                <div class="text-center pb-2">
                    <img src="@Model.Churches.ImageURl" alt="profile" class="img-profile" />
                </div>
            </div>
            <div class="col-lg-8">
                <div class="">
                    <div class="mb-3">
                        <h3>@Model.Churches.ChurchName, @Model.Churches.Town</h3>
                    </div>
                    <p class="clearfix">
                        <span class="float-left">
                            <i class="mdi mdi-home fa-2x" style="color: #1f4a79"></i>&nbsp; @Model.Churches.Town
                        </span>
                        <span class="float-right text-muted">
                        </span>
                    </p>
                    <p class="clearfix">
                        <span class="float-left">
                            <i class="mdi mdi-google-maps fa-2x" style="color: #1f4a79"></i>&nbsp; @Model.Churches.Address
                        </span>
                        <span class="float-right text-muted">
                        </span>
                    </p>
                    <p class="clearfix">
                        <span class="float-left">
                            <i class="mdi mdi-email fa-2x" style="color: #1f4a79"></i>&nbsp; @Model.Churches.EmailAddress
                        </span>
                        <span class="float-right text-muted">
                        </span>
                    </p>
                    <p class="clearfix">
                        <span class="float-left">
                            <i class="mdi mdi-phone fa-2x" style="color: #1f4a79"></i>&nbsp; @Model.Churches.Phone
                        </span>
                        <span class="float-right text-muted">
                        </span>
                    </p>
                    <p class="clearfix">
                        <span class="float-left">
                            <i class="mdi mdi-web fa-2x" style="color: #1f4a79"></i>&nbsp; @Model.Churches.Website
                        </span>
                        <span class="float-right text-muted">
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row p-3">
    <div class="col-12">
        <div class="row">
            <div class="col-md-12 bg-dark">
                <div class="card border-0 position-relative" style="background-color: #1f4a79">
                    <div class="card-body p-2">
                        @*<h3 class=" text-white">Recordings Details</h3>*@
                        <div id="performanceOverview" class="carousel slide performance-overview-carousel position-static pt-2" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <div class="row">
                                        <div class="col-md-3 item">
                                            <div class="d-flex flex-column flex-xl-row mt-4 mt-md-0">
                                                <div class="icon icon-a text-white mr-3">
                                                    <i class=" mdi mdi-file-image  icon-lg ml-3"></i>
                                                </div>
                                                <div class="content text-white">
                                                    <div class="d-flex flex-wrap align-items-center mb-2 mt-3 mt-xl-1">
                                                        <h3 class="font-weight-light mr-2 mb-1">Picture</h3>

                                                    </div>
                                                    <div class="col-8 col-md-7 d-flex border-info align-items-center justify-content-between px-0 pb-2 mb-3">
                                                        <h3 class="mb-0">@Model.DashBoardClients.NumberOfPictures</h3>

                                                    </div>
                                                    @*<p class="text-white font-weight-light pr-lg-2 pr-xl-5">The total number of Schedules of an Events</p>*@
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 item">
                                            <div class="d-flex flex-column flex-xl-row mt-4 mt-md-0">
                                                <div class="icon icon-b text-white mr-3">
                                                    <i class=" mdi mdi-file-video icon-lg ml-3"></i>
                                                </div>
                                                <div class="content text-white">
                                                    <div class="d-flex flex-wrap align-items-center mb-2 mt-3 mt-xl-1">
                                                        <h3 class="font-weight-light mr-2 mb-1">Video</h3>
                                                    </div>
                                                    <div class="col-8 col-md-7 d-flex border-info align-items-center justify-content-between px-0 pb-2 mb-3">
                                                        <h3 class="mb-0">@Model.DashBoardClients.NumberOfVideo</h3>

                                                    </div>
                                                    @*<p class="text-white font-weight-light pr-lg-2 pr-xl-5">The total number of Recordings for Current day of an Events of Churches</p>*@
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-3 item">
                                            <div class="d-flex flex-column flex-xl-row mt-5 mt-md-0">
                                                <div class="icon icon-c text-white mr-3">
                                                    <i class="mdi mdi-file-powerpoint  icon-lg ml-3"></i>
                                                </div>
                                                <div class="content text-white">
                                                    <div class="d-flex flex-wrap align-items-center mb-2 mt-3 mt-xl-1">
                                                        <h3 class="font-weight-light mr-2 mb-1">Slide Show</h3>

                                                    </div>
                                                    <div class="col-8 col-md-7 d-flex border-info align-items-center justify-content-between px-0 pb-2 mb-3">
                                                        <h3 class="mb-0">@Model.DashBoardClients.NumberOfSlideShow</h3>

                                                    </div>
                                                    @*<p class="text-white font-weight-light pr-lg-2 pr-xl-5">The total number of Cameras of Churches</p>*@
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-3 item">
                                            <div class="d-flex flex-column flex-xl-row mt-5 mt-md-0">
                                                <div class="icon icon-c text-white mr-3">
                                                    <i class="mdi mdi-camera  icon-lg ml-3"></i>
                                                </div>
                                                <div class="content text-white">
                                                    <div class="d-flex flex-wrap align-items-center mb-2 mt-3 mt-xl-1">
                                                        <h3 class="font-weight-light mr-2 mb-1">Cameras</h3>

                                                    </div>
                                                    <div class="col-8 col-md-7 d-flex border-info align-items-center justify-content-between px-0 pb-2 mb-3">
                                                        <h3 class="mb-0">@Model.DashBoardClients.NumberOfCameras</h3>

                                                    </div>
                                                    @*<p class="text-white font-weight-light pr-lg-2 pr-xl-5">The total number of Cameras of Churches</p>*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @{ var Counter = 1; }
    @foreach (var items in Model.LCameras)
    {
        <div class="col-sm-6 mb-2">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-9">
                            <video id='CameraLiveStream_@Counter' class="video-js vjs-default-skin w-100" height="200" controls>
                                <source id="LiveStreamSrc" src="@items.LiveStreamUrl" type="application/x-mpegURL">
                            </video>
                        </div>
                        <div class="col-sm-3">
                            <div class="row">
                                <div class="col-sm-12 pt-5 text-wrap border-bottom">
                                    <i class="mdi mdi-camera fa-2x" style="color: #1f4a79"></i>&nbsp; @items.CameraName
                                </div>
                                <div class="col-sm-12 pt-5 text-wrap border-bottom">
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" checked="@items.IsCameraLive" onchange="ChangeCameraStatus(@items.CameraId)" id="CameraIsOnlineStatus_@items.CameraId">
                                        <label class="custom-control-label text-success" for="CameraIsOnlineStatus_@items.CameraId"><span class="text-danger">OFF</span><span>/</span> <span class="text-success">ON</span> </label>
                                    </div>
                                </div>
                                <input type="hidden" id="hdnCameraID" value="@items.CameraId" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        Counter++;
    }
    <div class="col-sm-6 mb-2">
        <div class="card stretch-card">
            <div class="card-header" style="background-color:#1f4a79">
                <label style="color:white">Today's Schedule</label>
            </div>
            <div class="card-body">
                <div class="">
                    <form method="get">
                        <div class="table-sorter-wrapper col-lg-12 table-responsive">
                            <table id="sortable-table-1" class="table">
                                <thead>
                                    <tr>
                                        <th class="sortStyle">Event Name</th>
                                        <th class="sortStyle">Event Status</th>
                                        <th class="sortStyle">Start Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.LDashBoardClients)
                                    {
                                        <tr>
                                            <td class="text-wrap">
                                                @Html.DisplayFor(modelItem => item.ScheduleEventName, new { @class = "text-wrap" })
                                            </td>
                                            @if (item.ScheduleStatus == "Pending")
                                            {
                                                <td class="font-weight-medium text-danger">
                                                    @Html.DisplayFor(modelItem => item.ScheduleStatus, new { @class = "text-wrap" })
                                                </td>
                                            }
                                            else if (item.ScheduleStatus == "In Progress")
                                            {
                                                <td class="font-weight-medium text-warning">
                                                    @Html.DisplayFor(modelItem => item.ScheduleStatus, new { @class = "text-wrap" })
                                                </td>
                                            }
                                            else if (item.ScheduleStatus == "Completed")
                                            {
                                                <td class="font-weight-medium text-info">
                                                    @Html.DisplayFor(modelItem => item.ScheduleStatus, new { @class = "text-wrap" })
                                                </td>
                                            }
                                            else if (item.ScheduleStatus == "Published")
                                            {
                                                <td class="font-weight-medium text-success">
                                                    @Html.DisplayFor(modelItem => item.ScheduleStatus, new { @class = "text-wrap" })
                                                </td>
                                            }
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ScheduleEventTime, new { @class = "text-wrap" })
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>


                    </form>
                </div>

            </div>
        </div>
    </div>
    <div class="col-md-6 grid-margin">

        <div class="card">
            
            <div class="card-header text-white" style="background-color:#1f4a79">
                <form>

                    ANALYTICS

                    <div class="col-sm-2 pull-right">
                        <button type="submit" asp-action="DashBoardClient" asp-controller="DashBoardClient" class="btn btn-primary btn text-white" title="Search">Go</button>
                    </div>

                    <div class="col-sm-6 pull-right">
                        <div id="datepicker-popup2" class="input-group date datepicker">
                            <input type="text" id="SetEventDate" name="eventDate" class="form-control" placeholder="Event Date" />
                            <span class="input-group-addon input-group-append border-left">
                                <span class="ti-calendar input-group-text"></span>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
            
            <div class="card-body">

                <div class="table-sorter-wrapper col-lg-12 table-responsive">
                    <table id="sortable-table-1" class="table">
                        <thead>
                            <tr>
                                <th class="pl-0 border-bottom sortStyle">COUNTRY</th>
                                <th class="border-bottom sortStyle">TOTAL VIEWS</th>

                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var dassh in Model.AnalyticsList)
                            {
                                <tr>
                                    <td class=" pl-0">
                                        @Html.DisplayFor(modelItem => dassh.Country)
                                    </td>
                                    <td>
                                        <p class="mb-0">
                                            <span class="">
                                                @Html.DisplayFor(modelItem => dassh.CountryCount)
                                            </span>
                                        </p>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script>
    $('#UserAdminBtn').click(
        function () {

            $.ajax({
                type: "Post",
                url: '@Url.Action("Search", "User")',
                data: { FirstName: '', LastName: '', EmailAddress: '', Role: '2' },


            });
    }
    );

    </script>


    <script type="text/javascript">
    function ChangeCameraStatus(camId) {
        var cameraStatus = false;
        var cameraID = camId;
        var cameraStatus = $('#CameraIsOnlineStatus_' + cameraID).prop("checked");


        var formData = new FormData();
        formData.append("cameraId", cameraID);
        formData.append("cameraStatus", cameraStatus);

        $.ajax({
            type: "POST",
            url: "/DashBoardClient/ChangeCameraStatus/",

            data: formData,
            processData: false,
            contentType: false,

            success: function (response) {
                if (response.success) {
                    swal("Camera Status Changed Successfully!", {
                        icon: "success",

                    })
                } else {
                    // DoSomethingElse()
                    alert(response.responseText);
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }

    $(document).ready(function () {
        var date = '@ViewBag.SchDate';
        $('#SetEventDate').val(date);

        var count = '@Model.LCameras.Count()';
        var i;
        for ( i= 1; i <= count; i++){
            var player = videojs('CameraLiveStream_'+i);
        player.autoplay(false);
    }

    });
    </script>
