<div class="row">
    
            <div class="col-6">
               <div class="row">
                   <div class=" col-12">
                       @{ 
                           var Counter = 1;
                       }
                       @foreach (var items in Model.LCameras)
                       {
                   <div class="row mb-2">
                       <div class="col-sm-12">
                           <div class="card ">
                              
                               <div class="card-body mb-3 mt-2">
                                   <div class="row">


                                       <div class="col-sm-8">
                                           <video id='CameraLiveStream_@Counter' class="video-js vjs-default-skin w-100 h-100" controls>
                                               <source id="LiveStreamSrc" src="@items.LiveStreamUrl" type="application/x-mpegURL">
                                           </video>
                                       </div>

                                       <div class="col-sm-4">
                                           <div class="row ">


                                               <div class="col-sm-12 pt-5 text-wrap border-bottom">
                                                   <i class="mdi mdi-camera fa-3x " style="color: #1f4a79"></i>&nbsp; @items.CameraName
                                               </div>
                                               <div class="col-sm-12 pt-5 text-wrap border-bottom">
                                                   <div class="checkbox" >
                                                       <label>
                                                           <input type="checkbox" style="background-color:gray" data-toggle="toggle">
                                                           Camera ON/OFF
                                                       </label>
                                                   </div>
                                               </div>
                                           </div>
                                               </div>

                                           </div>
                                       </div>
                           </div>
                       </div>
                   </div>
                           Counter++;
                       }
                   </div>
               </div>
                <div class="row">

                    <div class="col-6 grid-margin stretch-card">
                        <div class="card" style="background-color: #660066">
                            <div class="card-body">
                                <p class="card-title text-md-center text-xl-left text-white">Today Event's</p>
                                <div class="d-flex flex-wrap justify-content-between justify-content-md-center justify-content-xl-between align-items-center">
                                    <h3 class="mb-0 mb-md-2 mb-xl-0 order-md-1 order-xl-0 text-white">@Model.DashBoardClients.TodaysSchedules</h3>
