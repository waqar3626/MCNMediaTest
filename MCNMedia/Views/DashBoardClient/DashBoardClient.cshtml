<script type="text/javascript">
    $('#CameraIsOnlineStatus').change(function () {
        var cameraStatus = false;
        var cameraID = document.getElementById('hdnCameraID').value;
        if (this.checked) {
            cameraStatus = true;
        }

        else {
            cameraStatus = false;
        }

        
        var formData =new FormData();
        formData.append("cameraId", cameraID);
        formData.append("cameraStatus", cameraStatus);
   
        $.ajax({
            type: "POST",
            url: "/DashBoardClient/ChangeCameraStatus/",

            data: formData,
            processData: false,
            contentType: false,

            success: function (response) {
                if (response.success) {
                    swal("Poof! Camera Status Change Seccessfully!", {
                        icon: "success",

                    })
                } else {
                    // DoSomethingElse()
                    alert(response.responseText);
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });

    });

   

      function onChangeChurchClient() {


        var churchId = document.getElementById('ddlid').value;

        $.ajax({
            type: "GET",
            //url: "/Client/Client/",
            url: '@Url.Action("ReloadPage", "DashBoardClient")',
            data: { chrid: churchId },
            contentType: "application/json;charset=utf-8",
            dataType: "json",

            success: function (result) {
                window.location.reload();
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }

        });

    }

    $(document).ready(function () {

        var count = '@Model.LCameras.Count()';
        var i;
        for ( i= 1; i <= count; i++){
            var player = videojs('CameraLiveStream_'+i);
        player.autoplay(false);
    }

    });
</script>