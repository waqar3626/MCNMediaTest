<script type="text/javascript">
     $(document).ready(function () {
         var filedropper = $('#Media_MediaURL').dropify();
         filedropper = filedropper.data('dropify');
         filedropper.resetPreview();
         filedropper.clearElement();

         filedropper.settings['defaultFile'] = '../' + $('#medUrl').val();
         filedropper.destroy();
         filedropper.init();

     });

    function UpdatePicture() {

        var ChurchMediaId = $('#ChurchMedId').val();
        var EditPictureTabName = document.getElementById('Media_TabName').value;
        var formData = new FormData();
        formData.append("ChurchMediaId", ChurchMediaId);
        formData.append("mediaType", "Picture");
        formData.append("EditPictureTabName", EditPictureTabName);
        var input = document.getElementById('Media_MediaURL');
        formData.append("mediaFile", input.files[0]);

        $.ajax({
            type: "POST",
            url: "/MediaChurch/UpdateMedia/",
            data: formData,

            processData: false,  // tell jQuery not to process the data
            contentType: false,  // tell jQuery not to set contentType
            success: function (result) {
                loadPicture();
                $('#EditPicModal').modal('hide');
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });

    }
</script>
