@model MCNMedia_Dev.Models.GenericModel
@{

}
<div class="row">
    <div class="col-sm-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Media.ChurchMediaId" class="form-control dropify" id="ChMedId" />
            <input type="hidden" asp-for="Media.MediaURL" class="form-control" id="slideUrl" />
            @*<div class="form-group">
                    <label asp-for="Pictures.MediaName" class="control-label">Media Name</label>
                    <input asp-for="Pictures.MediaName" class="form-control" id="MediaName" />
                    <span asp-validation-for="Pictures.MediaName" class="text-danger"></span>
                </div>*@
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-8">
                    @*<label asp-for="Media.MediaURL" class="control-label">Picture URL</label>*@
                    <input asp-for="Media.MediaURL" class="form-control dropify" id="slideShowMediaURL" type="file" name="MediaURl3" />
                    <span asp-validation-for="Media.MediaURL" class="text-danger"></span>
                    <input type="hidden" id="HdnMediaUrl" asp-for="Media.MediaURL" />
                    <input type="hidden" id="HdnMediaName" asp-for="Media.MediaName" />
                </div>
                <div class="col-2"></div>
            </div>
            <div class="form-group">
                <label asp-for="Media.TabName" class="control-label">Tab Name</label>
                <input asp-for="Media.TabName" class="form-control" id="eeslideshowTabName" />
                <span asp-validation-for="Media.TabName" class="text-danger"></span>
            </div>
        

        
            <div class="float-right text-right">
                <a onclick="UpdateSlideShow()" class="btn btn-warning btn-sm text-white" data-toggle="tooltip" data-placement="bottom" title="Update"><i class="mdi mdi-update text-white"></i> Update</a>
                @*<button type="submit" value="Add" class="btn btn-primary btn-sm "><i class="fa fa-plus"></i> Update </button>*@
                <a id="back" class="btn btn-secondary btn-sm text-white " data-dismiss="modal" aria-label="Close"><i class="fa fa-window-close-o text-white"></i> Cancel</a>
            </div>
       

        </form>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var filedropper = $('#slideShowMediaURL').dropify();
        filedropper = filedropper.data('dropify');
        filedropper.resetPreview();
        filedropper.clearElement();

        filedropper.settings['defaultFile'] = '../' + $('#slideUrl').val();
        filedropper.destroy();
        filedropper.init();

    });
    function UpdateSlideShow() {

        var churchMediaId = $('#ChMedId').val();
        var editSlideShowTabName = document.getElementById('eeslideshowTabName').value;
        var mediaUrl = $('#HdnMediaUrl').val();
        var mediaName = $('#HdnMediaName').val();
        var formData = new FormData();
        formData.append("ChurchMediaId", churchMediaId);
        formData.append("mediaType", "SlideShow");
        formData.append("EditSlideShowTabName", editSlideShowTabName);
        formData.append("MediaUrl", mediaUrl);
        formData.append("MediaName", mediaName);
        var input = document.getElementById('slideShowMediaURL');
        formData.append("mediaFile", input.files[0]);

        $.ajax({
            type: "POST",
            url: "/MediaChurch/UpdateSlide/",
            data: formData,

            processData: false,  // tell jQuery not to process the data
            contentType: false,  // tell jQuery not to set contentType
            success: function (result) {
                loadSlideShow();
                $('#EditSlideShowModal').modal('hide');
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
</script>


