<script type="text/javascript">
    $(document).ready(function () {
        $('#editSlideshowErrorMessage').hide();
        $('#editSlideshowSuccessMessage').hide();
    });

    function UpdateSlideShow() {
        var churchMediaId = $('#ChMedId').val();
        var editSlideShowTabName = document.getElementById('eeslideshowTabName').value;
        var mediaUrl = $('#HdnMediaUrl').val();
        var mediaName = $('#HdnMediaName').val();
        var formData = new FormData();
        formData.append("ChurchMediaId", churchMediaId);
        formData.append("mediaType", "SlideShow");
        formData.append("EditSlideShowTabName", editSlideShowTabName);
        formData.append("MediaUrl", mediaUrl);
        formData.append("MediaName", mediaName);
        //var input = document.getElementById('slideShowMediaURL');
    
        $('#EditSlideShowModal').modal('hide');

        displayBusyIndicator();
        $.ajax({
            type: "POST",
            url: "/MediaChurch/UpdateSlide/",
            data: formData,

            processData: false,  // tell jQuery not to process the data
            contentType: false,  // tell jQuery not to set contentType
            success: function (result) {

                if (result.success) {
                    loadSlideShow();
                    displayBusyIndicator2();
                    $('#AddSlideShowForm')[0].reset();
                    $('#AddSlideShowModal').modal('hide');
                    $('#addMediaSuccessMessage').removeAttr('hidden');
                    $(window).scrollTop(0);
                    $('#addMediaSuccessMessage').html('Slide show updated successfully');
                    $('#addMediaSuccessMessage').fadeIn();
                    $('#addMediaSuccessMessage').fadeTo(5000, 500).slideUp(500, function () {
                        $("#addMediaSuccessMessage").slideUp(500);
                    });
                    $('#addMediaSuccessMessage').attr('hidden');
                }
                else {
                  
                    $('#EditSlideShowModal').modal('show');
                    $('#editSlideshowErrorMessage').removeAttr('hidden');
                    $(window).scrollTop(0);
                    $('#editSlideshowErrorMessage').html(result.responseText);
                    $('#editSlideshowErrorMessage').fadeIn();

                    $('#editSlideshowErrorMessage').fadeTo(5000, 500).slideUp(500, function () {
                        $("#editSlideshowErrorMessage").slideUp(500);


                    });
                    $('#editSlideshowErrorMessage').attr('hidden');
                }
            },
            error: function (errormessage) {
                //alert(errormessage.responseText);
            }
        });
    }
</script>


