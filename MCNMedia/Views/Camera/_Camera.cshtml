<div class="card">
    <div class="card-body">
        <button type="submit" id="AddCamera1" class="btn btn-outline-behance btn-sm float-right " onclick="AddCamera()"> <i class="mdi mdi-plus"></i> Add New Camera</button>
        <div class="">
          

            <table class="table">
                <thead>
                    <tr>

                        <th>
                            Tab Name
                        </th>
                        <th>
                            HTTP Port
                        </th>
                        <th>
                            RTSP Port
                        </th>
                        <th>
                            Server
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="CamList">

                </tbody>
            </table>


            
        </div>

    </div>
</div>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="modal fade" id="AddCameraModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog mt-4" role="document" style="max-width:60%;">
                <div class="modal-content ">
                    <div class="modal-header">
                        <h5 class="modal-title " id="exampleModalLabel">Add Camera </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"><i class="fa fa-window-close-o"></i></span>
                        </button>
                    </div>
                    <div class="modal-body " id="AddCameraPreview">
                        @Html.Partial("~/Views/Camera/_AddCamera.cshtml", Model.Media)
                    </div>
                    @*<div class="modal-footer">
                            <button type="button" class="btn btn-success">Submit</button>
                            <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                        </div>*@
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable mt-4" role="document" style="max-width:60%;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit Camera</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"><i class="fa fa-window-close-o"></i></span>
                        </button>
                    </div>
                    <div class="modal-body" id="Preview">
                        @Html.Partial("~/Views/Camera/_EditCamera.cshtml", Model.Cameras)
                    </div>
                    @*<div class="modal-footer">
                            <button type="button" class="btn btn-success">Submit</button>
                            <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                        </div>*@
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        loadCamera();
    });

    function loadCamera() {
        $.ajax({
            url: "/Camera/GetAllCameras",
            type: "GET",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                var html = '';
                
                $.each(result, function (key, item) {
                    html += '<tr>';
                   
                    html += '<td>' + item.cameraName + '</td>';
                    html += '<td>' + item.httpPort + '</td>';
                    html += '<td>' + item.rtspPort + '</td>';
                    html += '<td>' + item.serverName + '</td>';
                    html += ' <td>';
                    html += '<a onclick="Open(' + item.cameraId + ')" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="bottom" title="Edit"><i class="fa fa-edit text-white"></i></a>&nbsp;';
                    html += '<a onclick="DeleteCamera(' + item.cameraId + ')" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="bottom" title="Delete"><i class="fa fa-trash text-white"></i></a>';
                    html += ' </td>';
                    html += '</tr>';
                });
                $('.CamList').html(html);
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }

    function AddCamera() {

        $('#AddCameraModal').modal('show');

    }

    function Open(camId) {
        $.ajax({
            type: "Get",
            url: '@Url.Action("EditCamera", "Camera")',
            data: { id: camId },
            success: function (data) {
                $('#Preview').html(data);
                $('#EditModal').modal('show');
            }
        })
            }

    function DeleteCamera(camId) {
    var ans = confirm("Are you sure you want to delete this camera?");
    if (ans) {
        $.ajax({
            url: "/Camera/DeleteCamera/" + camId,
            type: "POST",
            contentType: "application/json;charset=UTF-8",
            dataType: "json",
            success: function (result) {
                loadCamera();
                if (result) { alert("Record Deleted");}
            },
            error: function (errormessage) {
               // alert(errormessage.responseText);
            }
        });
    }
    }

    
</script>
