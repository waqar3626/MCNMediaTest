@model MCNMedia_Dev.Models.Website
@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_LayoutWebsite.cshtml";
}
<style type="text/css">
    .selectWrapper {
        border-radius: 40px;
        display: inline-block;
        overflow: hidden;
        background: #cccccc;
        border: 1px solid #cccccc;
    }
    .bgcolor {
        background-color: goldenrod;
    }

    .bgcolor1 {
        background-color: #060f2d;
        color: white;
    }
    .button {
        background-color: goldenrod;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        border-color: goldenrod;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        border-radius: 12px;
        margin: 4px 2px;
        cursor: pointer;
    }
    
</style>
<div class="card bgcolor1" >
    <div class="card-body">
        <h2>CONTACT US</h2>
    </div>

</div>
<div class="col-sm-12 ">

</div>

<form asp-action="AddContactForm" asp-controller="ClientController" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class=" row">
        <div class="col-sm-6 " style="background-color:#1e1625">
            <h4 class="text-center mt-5 text-white">Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within a matter of hours to help you.</h4>
            <div class="row col-sm-12 mt-5">

                <div class="form-group col-sm-6 text-white">
                    <label asp-for="ContactName">Name</label>
                    <span asp-validation-for="ContactName" class="text-danger"></span>
                    <input class="form-control selectWrapper" asp-for="ContactName">
                </div>

                <div class="form-group col-sm-6 text-white">
                    <label asp-for="ContactEmail">Email</label>
                    <span asp-validation-for="ContactEmail" class="text-danger"></span>
                    <input class="form-control selectWrapper" asp-for="ContactEmail">
                </div>

            </div>


            <div class="form-group col-sm-12 text-white">
                <label asp-for="ContactSubject">Subject</label>
                <span asp-validation-for="ContactSubject" class="text-danger"></span>
                <input class="form-control selectWrapper" asp-for="ContactSubject">
            </div>
            <div class="form-group col-sm-12 text-white">
                <label class="col-form-label">Message</label>
                <span asp-validation-for="Message" class="text-danger"></span>
                <textarea class="form-control selectWrapper" asp-for="Message" maxlength="150" rows="4"></textarea>
            </div>
            <div class="form-group col-sm-12 float-right rounded-sm "><input class=" button"  asp-action="AddContactForm" type="submit" value="Send"></div>


        </div>
        <div class="col-sm-6 p-0 m-0">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2316.746365106911!2d-6.780964684117638!3d54.50269748023756!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x320a61ca1b228a11!2sMCN+NI+Ltd!5e0!3m2!1sen!2suk!4v1541503340298"
                    height="550" style="width:100%;border:0" frameborder="0" allowfullscreen></iframe>
        </div>

    </div>
</form>