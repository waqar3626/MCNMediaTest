            <div class="col-lg-4 col-md-6 p-2">
                <div class="position-relative" style="height:179px;">
                    <i class="fa fa-map-marker fa-3x text-pink" aria-hidden="true"></i>
                    <br />
                    <br />
                    <h5>Address</h5>
                    <div>
                        Euro Streaming Services T/A MCN Media
                        <br />
                        Unit 8 Ballysaggart Business Complex
                        <br />
                        8 Beechvalley Way, Dungannon, BT70 1BS
                        <br />
                        Northern Ireland
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-1 d-lg-block d-none"></div>
</div>
<form asp-action="ContactUs" asp-controller="Website" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row m-0 mt-5 mb-5">
        <div class="col-3 d-lg-block d-none"></div>
        <div class="col-lg-6 col-md-12 col-sm-12 text-center">
            <div class="row text-center">
                <div class="text-pink font-36 text-center pt-4 pb-4 bg-white container avantgardece">
                    Email us now
                </div>
                <div class="form-group col-sm-12">
                    @*<label asp-for="ContactName">Name</label>*@
                    <span asp-validation-for="ContactName" class="text-danger"></span>
                    <input class="form-control selectWrapper" asp-for="ContactName" placeholder="Name" required>
                </div>
                <div class="form-group col-sm-12">
                    @*<label asp-for="ContactEmail">Email</label>*@
                    <span asp-validation-for="ContactEmail" class="text-danger"></span>
                    <input type="email" class="form-control selectWrapper" asp-for="ContactEmail" placeholder="Email" required>
                </div>
                <div class="form-group col-sm-12">
                    @*<label asp-for="ContactSubject">Subject</label>*@
                    <span asp-validation-for="ContactSubject" class="text-danger"></span>
                    <input class="form-control selectWrapper" asp-for="ContactSubject" placeholder="Subject" required>
                </div>
                <div class="form-group col-sm-12">
                    @*<label class="col-form-label">Message</label>*@
                    <span asp-validation-for="Message" class="text-danger"></span>
                    <textarea class="form-control selectWrapper" asp-for="Message" maxlength="2450" rows="5" placeholder="Message" required></textarea>
                </div>
                <div class="form-group col-sm-12 ">
                   
                        <dnt-captcha asp-captcha-generator-max="9999999"
                                     asp-captcha-generator-min="1111111"
                                     asp-captcha-generator-language="English"
                                     asp-captcha-generator-display-mode="ShowDigits"
                                     asp-use-relative-urls="true"
                                     asp-placeholder="Enter security code here"
                                     asp-font-name="Tahoma"
                                     asp-font-size="40"
                                     asp-fore-color="#333333"
                                     asp-back-color="#ccc"
                                     asp-text-box-class="text-box form-control"
                                     asp-text-box-template="<span class='input-group-prepend'><span class='form-group-text'></span></span>{0}"
                                     asp-validation-error-message="Please enter the security code"
                                     asp-validation-message-class="text-danger"
                                     asp-refresh-button-class="fa fa-redo btn-sm"
                                     asp-use-noise="false"
                                     />
                    </div>
                    <div class="form-group col-sm-12 float-right rounded-sm ">
                    <input type="submit" value="Send" asp-action="ContactUs" class="btn btn-pink my-2 font-weight-bolder my-sm-0 pl-xl-5 pl-4 pr-xl-5 pr-4 text-white font-14" />
                </div>
                <h5>@ViewBag.message</h5>
            </div>
        </div>
        <div class="col-1 d-lg-block d-none"></div>
    </div>
    @*<div class="row m-0 mt-5 mb-5">
        <div class="col-sm-12 p-0 m-0">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2316.746365106911!2d-6.780964684117638!3d54.50269748023756!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x320a61ca1b228a11!2sMCN+NI+Ltd!5e0!3m2!1sen!2suk!4v1541503340298"
                    height="550" style="width:100%;border:0" frameborder="0" allowfullscreen></iframe>
        </div>*@
    @*</div>*@
</form>
