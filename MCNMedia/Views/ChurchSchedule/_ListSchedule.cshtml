<script type="text/javascript">
    function AddChurchSchedule() {

        $('#AddChurchScheduleModel').modal('show');

    }

    $(document).ready(function () {
        loadChurchSch();
    });

    function EditChurchSchedule(schId) {
         $.ajax({
             type: "Get",
             url: '@Url.Action("Edit", "Schedule")',
             data: { id: schId },
             success: function (data) {
                 $('#EditChurchSchedulePreview').html(data);
                 $('#EditChurchScheduleModal').modal('show');
             }
         });

    }


    function DeleteChurchSchedule(schId) {

        var ans = confirm("Are you sure you want to delete this Church Schedule?");
        if (ans) {
            $.ajax({
                url: "/Schedule/DeleteSchedule/" + schId,
                type: "POST",

                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (result) {
                    loadChurchSch();
                    if (result) { alert("Record Deleted"); }
                },
                error: function (errormessage) {
                    // alert(errormessage.responseText);
                }
            });
        }
    }


    function loadChurchSch() {

        $.ajax({
            url: "/ChurchSchedule/ListSchedule",
            type: "GET",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                var html = '';

                $.each(result, function (key, item) {
                    html += '<tr>';

                    html += "<td class='border-right-sm w-25'><div class='card'> <div class='card-body bg-info'> " + item.eventDay + "</div></div ></td > ";
                    var str = item.eventName;
                    var array = str.split('|');
                    html += "<td class='text-wrap'>";
                    $.each(array, function (key, item2) {
                        html += "<div class='p-2 float-left'><div class='panel-body '><div class='overlay'> <button onclick='EditChurchSchedule(' + item.schId + ')'  class='btn btn-primary btn-sm' ><i class='fa fa-edit'></i></button><button onclick='DeleteChurchSchedule(' + item.schId + ')' class='btn btn-danger btn-sm '><i class='mdi mdi-delete'></i></button></div><div class='card'><div class='card-body '>" + item2 + " </div></div></div> </div>";

                    }
                    );

                    html += '</td ></tr>';
                });
                $('.SchList').html(html);
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }

</script>





