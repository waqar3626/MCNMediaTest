<script type="text/javascript">
    $(document).ready(function () {
        loadChurchSch();
    });

    function loadChurchSch() {
        $.ajax({
            url: "/ChurchSchedule/ListSchedule",
            type: "GET",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                var html = '';

                $.each(result, function (key, item) {
                    html += '<tr>';

                    html += "<td class='border-right-sm'><div class='card'> <div class='card-body bg-info'> " + item.eventDay + "</div></div ></td > ";
                    var str = item.eventName;
                    var array = str.split('|');
                    html += "<td class='text-wrap'>";
                    $.each(array, function (key, item2) {
                        html += "<div style='float:left;margin:0px 5px 5px 0px;'><div class='card'> <div class='card-body'>" + item2 + "</div></div></div > ";

                    }
                        );
                    
                    html += '</td ></tr>';
                });
                $('.SchList').html(html);
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }

    function AddCamera() {

        $('#AddCameraModal').modal('show');

    }

    function Open(camId) {
        $.ajax({
            type: "Get",
            url: '@Url.Action("EditCamera", "Camera")',
            data: { id: camId },
            success: function (data) {
                $('#Preview').html(data);
                $('#EditModal').modal('show');
            }
        })
            }

    function DeleteCamera(camId) {
    var ans = confirm("Are you sure you want to delete this camera?");
    if (ans) {
        $.ajax({
            url: "/Camera/DeleteCamera/" + camId,
            type: "POST",
            contentType: "application/json;charset=UTF-8",
            dataType: "json",
            success: function (result) {
                loadCamera();
                if (result) { alert("Record Deleted");}
            },
            error: function (errormessage) {
               // alert(errormessage.responseText);
            }
        });
    }
    }


</script>


