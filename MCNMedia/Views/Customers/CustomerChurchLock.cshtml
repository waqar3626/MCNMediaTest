@model MCNMedia_Dev.Models.GenericModel
@{
    ViewData["Title"] = "CustomerChurchLock";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth lock-full-bg">
            <div class="row w-100">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-transparent text-left p-5 text-center">
                        @*<label>@Model.Churches.ChurchName</label>*@
                        <form class="pt-5" asp-action="CustomerChurchLock" asp-controller="Customers" method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="churchLock.churchPass" />
                                <label for="examplePassword1">Password to unlock</label>

                                <input type="password" asp-for="churchLock.Password" class="form-control text-center" id="examplePassword1" placeholder="Password">
                            </div>
                            <div class="mt-5">
                                <button type="submit" class="btn btn-block  text-white btn-lg bg-blue font-weight-medium" href="@Url.Action("CustomerChurchLock", "Customers")">Unlock</button>
                            </div>
                            <br />
                            @{ if (ViewBag.IsSuccess == 3)
                                {
                                    <div class="alert alert-danger text-danger">
                                        Password Incorrect
                                    </div> } }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
