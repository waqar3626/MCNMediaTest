@model MCNMedia_Dev.Models.ChurchDonation


    @using (Html.BeginForm("AddPicture", "MediaChurch", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation" }))

    {
        <div class="form-group row p-3" id="alertDiv">
            <div class="col-md-12">
                <div class="alert alert-danger" role="alert" id="alertLabel">

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                @*<h4 class="card-title">Camera</h4>*@

                <div class="form-group row">
                    <div class="col-2"></div>
                    <div class="col-8">
                        @Html.TextBoxFor(model =>model.ImageUrl, new { @class = "form-control form-control-sm dropify", @id = "Picture_Url", @name = "MediaURl3", @type = "file", @required = "required", @size = "40", @placeholder = "", @vfield = "Y", @nreq = "Y", @maxlength = "60", @nmaxlen = "60", @ntype = "nonNumeric", @nfrom = "register" })



                    </div>
                    <div class="col-2"></div>
                </div>
                <div class="form-group">
                    <label asp-for="WebSiteUrl" class="control-label">WebSite Url</label>
                    @Html.TextBoxFor(model => model.WebSiteUrl, new { @class = "form-control form-control-sm", @id = "WebSiteUrl", @required = "required", @size = "40", @placeholder = "", @vfield = "Y", @nreq = "Y", @maxlength = "60", @nmaxlen = "60", @ntype = "nonNumeric", @nfrom = "register" })
                    <div class="invalid-feedback">
                        Please provide a valid Tab Name.
                    </div>
                </div>

                <div class="float-right">
                    <a onclick="AddDonation()" class="btn btn-success btn-sm text-white" data-toggle="tooltip" data-placement="bottom" title="Add"><i class="mdi mdi-content-save text-white"></i> Add </a>
                    <a id="back" class="btn btn-warning btn-sm text-white " data-dismiss="modal" aria-label="Close" title="Cancel"><i class="fa fa-window-close-o text-white"></i> Cancel</a>
                </div>

            </div>
        </div>
    }

<script type="text/javascript">
    $(document).ready(function () {

        $('#alertDiv').hide();
    });

    function AddDonation() {
        var s = "";
        var WebsiteUrl = document.getElementById('WebSiteUrl').value;
        var formData = new FormData();
        var input = document.getElementById('Picture_Url');
        
        formData.append("WebSiteUrl", WebsiteUrl);
        var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
        if ($.inArray($('#Picture_Url').val().split('.').pop().toLowerCase(), fileExtension) == -1) {

            input = "";


        }
        if (input == '') {
            s += '<label >' + "Only formats are allowed : " + fileExtension.join(', ') + '</label>';

            $('#alertLabel').html(s);
            $('#alertDiv').show();

        }

        if (WebsiteUrl == '') {
            s += '<label >Please provide a valid Website Url </label>';


            $('#alertLabel').html(s);
            $('#alertDiv').show();
            return;
            $('#AddModal').modal('show');
        }
        formData.append("mediaFile", input.files[0]);
        $.ajax({
            type: "POST",
            url: "/ChurchDonation/AddDonation/",
            data: formData,
            processData: false,  // tell jQuery not to process the data
            contentType: false,  // tell jQuery not to set contentType
            success: function (result) {
                loadPicture();
                $('#AddModal').modal('hide');
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
</script>