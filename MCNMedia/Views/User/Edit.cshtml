@model MCNMedia_Dev.Models.User

@{
    ViewData["Title"] = "Edit";

}


@if (!string.IsNullOrEmpty(ViewBag.ErrorMsgPartial))
{

    <div class="row m-0 mb-3">
        <div class="col-lg-12">
            <div class="alert alert-danger">
                @ViewBag.ErrorMsgPartial
            </div>

        </div>

    </div>

}

<form asp-action="UpdateUser" asp-controller="User" method="post" id="CertForm" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-body">


            <div class="form-group row">
                <label asp-for="FirstName" for="validationCustom10" class="col-sm-3 col-form-label">First Name *</label>
                <div class="col-sm-9">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                    <input asp-for="FirstName" type="text" class="form-control" id="validationCustom10"  placeholder="First Name" required />
                    <input type="hidden" asp-for="UserId" />
                    <div class="invalid-feedback">
                        Please Provide a valid First Name
                    </div>
                </div>

            </div>
            <div class="form-group row">
                <label asp-for="LastName" for="validationCustom11" class="col-sm-3 col-form-label">Last Name *</label>
                <div class="col-sm-9">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                    <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name"  id="validationCustom11" required />
                    <div class="invalid-feedback">
                        Please Provide a valid Last Name
                    </div>
                </div>

            </div>
            <div class="form-group row">
                <label asp-for="EmailAddress" for="validationCustom12" class="col-sm-3 col-form-label">Email Address *</label>
                <div class="col-sm-9">
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    <input asp-for="EmailAddress" class="form-control" placeholder="Email" type="email" id="validationCustom12" required />
                    <div class="invalid-feedback">
                        Please Provide a valid Email Address
                    </div>
                </div>
            </div>

            <div class="form-group row" hidden>
                <label class="col-sm-3 col-form-label">New Password</label>
                <div class="col-sm-9">
                    <input class="form-control" placeholder="Password" name="NewPass" />
                </div>
            </div>

            <div class="form-group row " hidden>
                <label asp-for="LoginPassword" for="validationCustom13" class="col-sm-3 col-form-label">Login Password *</label>
                <div class="col-sm-9">
                    <span asp-validation-for="LoginPassword" class="text-danger"></span>
                    <input asp-for="LoginPassword" class="form-control" readonly="readonly" placeholder="Password" id="validationCustom13" />
                </div>

            </div>

            <div class="form-group row">
                <label asp-for="RoleId" class="col-sm-3 col-form-label">Role *</label>
                <div class="col-sm-9">
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                    @*<input asp-for="RoleId" class="form-control text-small" placeholder="Role" />*@
                    <select asp-for="RoleId" id="select1" class="custom-select" required asp-items="@(new SelectList(@ViewBag.State,"Value","Text"))">
                        <option value="0" disabled>--Select Role--</option>
                    </select>
                    <div class="invalid-feedback">
                        Please Provide a valid Role
                    </div>
                </div>


            </div>


            <div class="float-right">
                <button type="submit" id="ValUserUpdate" value="Update" class="btn btn-success btn-sm text-white "><i class="mdi mdi-update text-white"></i> Update</button>
                <button type="button" class="btn btn-warning btn-sm text-white" data-dismiss="modal" aria-label="Close" title="Back"><i class="fa fa-chevron-left"></i> Back</button>
            </div>
        </div>
    </div>
</form>

<script>


    $(function () {
        $("#ValUserUpdate").on("click", function (e) {
            var form = $("#CertForm")[0];
            var isValid = form.checkValidity();
            if (!isValid) {
                e.preventDefault();
                e.stopPropagation();
            }
            else {
                return true;
            }
            form.classList.add('was-validated');
            return false; // For testing only to stay on this page
        });
    });
</script>


