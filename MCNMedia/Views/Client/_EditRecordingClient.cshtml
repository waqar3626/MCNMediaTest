@model MCNMedia_Dev.Models.Recording

@{
    ViewData["Title"] = "Edit";

}


<form asp-action="Edit" asp-controller="Recording" id="CertForm" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-body">


            <input type="hidden" asp-for="RecordingId" />

            <input type="hidden" asp-for="RecordingURl" />
            <input type="hidden" asp-for="ChurchId" />
            <input type="hidden" asp-for="Date" />
            <input type="hidden" asp-for="Time" />


            <div class="form-group row">
                <label asp-for="RecordingTitle" for="validationCustom07" class="col-sm-3 col-form-label"> Recording Title</label>
                <div class="col-sm-9">
                    <span asp-validation-for="RecordingTitle" class="text-danger"></span>
                    <input asp-for="RecordingTitle" class="form-control" id="validationCustom07" placeholder="Recording Title" required />
                    <div class="invalid-feedback">
                        Please Provide a Valid Record Title
                    </div>
                </div>


            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-3 col-form-label">Password</label>
                <div class="col-sm-4 ">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input type="text" asp-for="Password" class="form-control" placeholder="Password" />

                </div>
                <div class="col-sm-5">
                    <div class="float-right">
                        <button type="submit" id="valUpdateButton" value="Update" class="btn btn-success  btn-sm text-white" title="Update"><i class="mdi mdi-update text-white"></i> Update</button>
                        <button type="button" class="btn btn-warning  btn-sm text-white" data-dismiss="modal" aria-label="Close" title="Back"><i class="fa fa-chevron-left"></i> Back</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

<script type="text/javascript">

    $(function () {
        $("#valUpdateButton").on("click", function (e) {
            var form = $("#CertForm")[0];
            var isValid = form.checkValidity();
            if (!isValid) {
                e.preventDefault();
                e.stopPropagation();
            }
            else {

                return true;
            }
            form.classList.add('was-validated');
            return false; // For testing only to stay on this page
        });
    });



</script>
