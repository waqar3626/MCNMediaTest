<form asp-action="UpdateAnnouncement">
    <div class="card">
        <div class="card-body">
            @*<h4 class="card-title">Announcement</h4>
                <textarea id="simpleMde" asp-for="Announcement.AnnouncementText">
                </textarea>*@

            <div class="form-group">
                <label asp-for="Announcement.AnnouncementTitle" class="control-label">Announcement Title</label>
                <input asp-for="Announcement.AnnouncementTitle" class="form-control" id="AddAnnouncementTitle" />
                <span asp-validation-for="Announcement.AnnouncementTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <textarea id="simpleMde" asp-for="Announcement.AnnouncementText">
