@model MCNMedia_Dev.Models.GenericModel
@{
    ViewData["Title"] = "Announcement";
    Layout = "~/Views/Shared/_NestedLayout.cshtml";
}

<!-- Plugin css for this page -->

<!-- End plugin css for this page -->





<div class="card">
    <div class="card-body">
        <div class="float-right">
            <button type="submit" value="Add" id="AddAnnouncementBtn" class="btn btn-outline-behance btn-sm " onclick="AddAnnouncement()"><i class="fa fa-plus"></i> Add Announcement</button>
        </div>
        <h3>Manage Announcements</h3>
        <br />
        <div class="">
            <table class="table">
                <thead>
                    <tr>
                        @*<th>
                            @Html.DisplayNameFor(model => model.UserId)
                        </th>*@
                        <th>
                            Title
                        </th>
                        <th>
                            Announcement
                        </th>
                        <th>
                            Created Date
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.LAnnouncement)
                    {
                        <tr>

                            @*<td>
                                @Html.DisplayFor(modelItem => item.UserId)
                            </td>*@
                            @*<td>
                                @Html.DisplayFor(modelItem => item.ChurchName)
                            </td>*@
                            <td>

                                @Html.DisplayFor(modelItem => item.AnnouncementTitle)
                            </td>
                            <td>
                                @Html.Raw(item.AnnouncementText)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedAt)

                            </td>
                            <td>

                                <a onclick="EditAnnouncement( @item.ChurchAnnouncementId)" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="bottom" title="Edit"><i class="fa fa-edit text-white"></i></a>

                                @*<a href="@Url.Action("Delete", "Schedule", new { id=item.ScheduleId })" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="bottom" title="Delete"><i class="fa fa-trash"></i></a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="modal fade" id="AddAnnouncementPopUp" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document" style="max-width:60%;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit Announcement</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"><i class="fa fa-window-close-o"></i></span>
                        </button>
                    </div>
                    <div class="modal-body" id="AddAnnouncementPreview">
                        @Html.Partial("~/Views/Client/_AddAnnouncement.cshtml", Model.Announcement)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="modal fade" id="EditAnnouncementModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document" style="max-width:60%;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit Announcement</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"><i class="fa fa-window-close-o"></i></span>
                        </button>
                    </div>
                    <div class="modal-body" id="EditAnnouncementPreview">
                        @Html.Partial("~/Views/Client/_EditAnnouncement.cshtml", Model.Announcement)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- plugin js for this page -->
<script src="~/theme/vendors/summernote/dist/summernote-bs4.min.js"></script>
<script src="~/theme/vendors/tinymce/tinymce.min.js"></script>
<script src="~/theme/vendors/quill/quill.min.js"></script>
<script src="~/theme/vendors/simplemde/simplemde.min.js"></script>
<!-- End plugin js for this page -->
<!-- Custom js for this page-->
<script src="~/theme/js/editorDemo.js"></script>
<!-- End custom js for this page-->
<script type="text/javascript">
    function EditAnnouncement(churchAnnouncementId) {
     
        $.ajax({

            type: "Get",
            url: '@Url.Action("EditAnnouncement", "Client")',
            data: { id: churchAnnouncementId },
            success: function (data) {
                $('#EditAnnouncementPreview').html(data);
                $('#EditAnnouncementModal').modal('show');

            }
        });
    }
    function AddAnnouncement() {

        $('#AddAnnouncementPopUp').modal('show');

    }
    function LoadData() {
        $.ajax({
            type: "GET",
            url: "/Client/Announcement/",


            processData: false,  // tell jQuery not to process the data
            contentType: false,  // tell jQuery not to set contentType



        });
    }
</script>