@using Microsoft.AspNetCore.Http
@model MCNMedia_Dev.Models.GenericModel

@{
    ViewData["Title"] = "ClientVideoPlayer";
   

    @if (string.IsNullOrEmpty(Context.Session.GetString("UserType")))
    {
        Context.Response.Redirect("../UserLogin");
    }
    else
    {
        if(Context.Session.GetString("UserType").ToLower() == "client")
        {
            Layout = "~/Views/Shared/_NestedLayout.cshtml";
        }
        else if (Context.Session.GetString("UserType").ToLower() == "admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }

    }

}

